            <div class="ductronggriditem">

                <input style="width:85%" asp-for="Checkout" type="text" class="checkout_date form-control" placeholder="MM/DD/YYYY">
            </div>
            <div class="ductronggriditem"><label>Chọn User</label></div>
            <div class="ductronggriditem">
                <input class="form-control" asp-for="Iduser" />
            </div>
        </div>
        <button style="margin:0 auto" type="submit">Submit</button>
    </form>



</div>



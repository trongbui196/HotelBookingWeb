                </select>
            </div>
            <div class="ductronggriditem"> <label>Chọn loại phòng</label></div>
            <div class="ductronggriditem">
                <select class="form-control" id="iFunction1" name="nFunction1" onchange="changeddl1(this)">
                    <option value="-1">Chọn loại phòng</option>
                    <option value="1">Phòng Đơn</option>
                    <option value="1">Phòng Đôi</option>
                    <option value="1">Phòng Gia Đình</option>
                    <option value="1">Phòng Thương Gia</option>
                    <option value="1">Phòng Tổng Thống</option>
                    <option value="1">Phòng Đặc Biệt</option>
                </select>
            </div>
            <div class="ductronggriditem"> <label>Chọn sphòng</label></div>

            <div class="ductronggriditem">
                <select class="form-control" asp-for="Thanhtoanchua" id="iOperation1">
                    <option value="null">Chọn phòng</option>
                    <option value="D101">D101</option>
                    <option value="D102">D102</option>
                    <option value="D103">D103</option>
                    <option value="DD201">DD201</option>
                    <option value="DD202">DD202</option>


@model WebApplication1.Models.Reserved
@{
    ViewData["Title"] = "AddDatPhong";
    Layout = "~/Views/Shared/_LayouAdmin.cshtml";
}

<script>

    function changeddl(obj) {

        var text = obj.options[obj.selectedIndex].text;
        var ddl2 = document.querySelectorAll('#iOperation option');
        for (var i = 1; i < ddl2.length; i++) {
            var option = ddl2[i];
            option.style.display = 'none';
            if (text == 'TP.Hồ Chí Minh') {
                if (['Bình Thạnh', 'Quận 1', 'Quận 3', 'Quận 7', 'Thủ Đức'].indexOf(option.text) > -1)
                    option.style.display = 'block'

            }
            if (text == 'Hà Nội') {
                if (['Ba Đình', 'Cầu Giấy', 'Đống Đa', 'Hai Bà Trưng'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
            if (text == 'Đà Nẵng') {
                if (['Liên Chiểu', 'Hải Châu', 'Ngũ Hành Sơn', 'Sơn Trà'].indexOf(option.text) > -1)
                    option.style.display = 'block'

            }
            if (text == 'Nha Trang') {
                if (['Vĩnh Hải', 'Vĩnh Phước', 'Vĩnh Trường', 'Vĩnh Nguyên'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
            if (text == 'Phú Quốc') {
                if (['Hòn Móng Tay', 'Đảo Hòn Một', 'Hòn Dăm', 'Hòn Bướm'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
            if (text == 'Đà Lạt') {
                if (['Phường 6', 'Phường 1', 'Phường 2', 'Phường 3'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
        }
    }
    function changeddl1(obj) {

        var text = obj.options[obj.selectedIndex].text;
        var ddl2 = document.querySelectorAll('#iOperation1 option');
        for (var i = 1; i < ddl2.length; i++) {
            var option = ddl2[i];
            option.style.display = 'none';
            if (text == 'Phòng Đơn') {
                if (['D101', 'D102', 'D103', 'D104', 'D105'].indexOf(option.text) > -1)
                    option.style.display = 'block'

            }
            if (text == 'Phòng Đôi') {
                if (['DD201', 'DD202', 'DD203', 'DD204'].indexOf(option.text) != -1)
                    option.style.display = 'block'
            }
            if (text == 'Phòng Gia Đình') {
                if (['GD301', 'GD302', 'GD303'].indexOf(option.text) > -1)
                    option.style.display = 'block'

            }
            if (text == 'Phòng Thương Gia') {
                if (['TG401', 'TG402', 'TG403'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
            if (text == 'Phòng Tổng Thống') {
                if (['TT501', 'TT502'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
            if (text == 'Phòng Đặc Biệt') {
                if (['DB777'].indexOf(option.text) > -1)
                    option.style.display = 'block'
            }
        }
    }
</script>

<div style="text-align:center;color:black;background: #fff;border-radius: 5px;padding-top:50px;width:500px;margin:0 auto;box-shadow: 0 10px 10px rgba(0, 0, 0, 0.15);">
    <form asp-action="AddDatPhong" method="post">
        <div class="ductronggrid">
            <div class="ductronggriditem"> <label>Chọn thành phố</label></div>
            <div class="ductronggriditem">
                <select id="iFunction" name="nFunction" onchange="changeddl(this)" class="form-control">
                    <option value="-1" selected="">Select</option>
                    <option value="1">TP.Hồ Chí Minh</option>
                    <option value="2">Hà Nội</option>
                    <option value="3">Đà Nẵng</option>

 @model WebApplication1.Models.Userr
 @{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function showpass() {
        var x = document.getElementById("pword1");
        var y = document.getElementById("pword2");

        if (x.type === "password") {
            x.type = "text";
            y.type = "text";

        } else {
            x.type = "password";
            y.type = "password";

        }
    }
</script>
<div class="hero-wrap" style="background-image: url('../images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home</a></span> <span>About Us</span></p>
                    <h1 class="mb-4 bread">Giới thiệu về chúng tôi</h1>
                </div>
            </div>
        </div>
    </div>
</div>


<div style="text-align:center;color:black;background: #fff;border-radius: 5px;padding-top:50px;width:500px;margin:0 auto;box-shadow: 0 10px 10px rgba(0, 0, 0, 0.15);">
    <h1>Đăng Kí</h1>
    <form style="" asp-action="Register" method="post">

        <div style="margin-bottom:20px">
            <input style="padding:10px;width:250px" asp-for="Emailuser" type="text" placeholder="Nhập Email" required>
           
        </div>
        <div style="margin-bottom:20px">
            <input style="padding:10px;width:250px" asp-for="Tenuser" type="text" placeholder="Nhập tên" required>
           
        </div>
        <div style="margin-bottom:20px">
            <input style="padding:10px;width:250px" asp-for="Sdtuser" type="text" placeholder="Nhập Số điện thoại" required>
            
        </div>
        <div style="margin-bottom:20px">
            <input style="padding:10px;width:230px" id="pword1" asp-for="Userpassword" type="password" placeholder="Nhập mật khẩu" required><span onclick="showpass()"><i style="cursor:pointer" class="fa-solid fa-eye"></i></span>
            
        </div>
        <div style="margin-bottom:20px">
            <input style="padding:10px;width:230px" id="pword2" type="password" placeholder="Nhập mật khẩu" required>
            <span onclick="showpass()"><i style="cursor:pointer" class="fa-solid fa-eye"></i></span>
        </div>
        <div>
            <input style="color:white;background: linear-gradient(to right, #99004d 0%, #ff0080 100%);border:1px solid #62f321;border-radius:15px;padding:10px" type="submit" name="" value="Đăng Kí">
        </div>
    </form>
    <div class="option1">Đã có tài khoản? Đăng nhập</div>
    <div style="background: linear-gradient(to right, #FF80BF 0%, #ff0080 100%);width:250px;margin-top:20px !important;margin:0 auto;border-radius:15px;padding:10px">
        <a style="color:black;font-weight:bold" asp-controller="Home" asp-action="Login"></i>Đăng nhập tài khoản</a>
    </div>
    
</div>
